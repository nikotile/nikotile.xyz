<!doctype html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:site" content="@nikotile"/>
    <meta property="og:url" content="<%= getUrl().url %>"/>
    <meta property="og:site_name" content="<%= meta.title %>"/>
    <% // check if entry or not %>
    <% if(getUrl().path.slice(0,6) === '/blog/' && getUrl().path.length > 6) { %>
    <meta name="author" content="<%= meta.title %>">
    <meta property="og:title" content="<%= entry.title %>"/>
    <meta property="og:type" content="article"/>
    <meta property="og:article:published_time" content="<%= entry.date %>"/>
    <meta property="og:description" content="<%= entry.description.slice(0,177) + '...' %>"/>
    <meta property="og:image" content="https://<%= getUrl().hostname %>/icons/<%= entry.guid %>.png"/>
    <meta name="twitter:image" content="https://<%= getUrl().hostname %>/icons/<%= entry.guid %>.png"/>
    <title><%= entry.title %></title>
    <% } else { %>
    <meta property="og:title" content="<%= meta.title %>"/>
    <meta property="og:type" content="website"/>
    <meta property="og:description" content="The homepage of <%= meta.title %>."/>
    <meta property="og:image" content="https://<%= getUrl().hostname %>/pictures/alticon.png"/>
    <title><%= meta.title %></title>
    <% } %>
    <link rel="shortcut icon" href="../../pictures/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link href="../../style.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
    <%- body %>
    </div>
    <%- include('../includes/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
