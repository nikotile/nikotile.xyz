<div class="text-center m-3 p-2">
  <h1>Write</h1>
</div>
<div class="m-3 p-2">
  <form class="align-items-class" method="POST"
    <div class="form">
      <input class="form-control" type="text" name="title" placeholder="Title" maxlength="150" required>
    </div>
    <div class="form mb-3">
      <textarea class="form-control" style="height:200px" name="description" placeholder="Write your post. New lines will be converted to separate paragraphs. Include img <img> tag(s) manually. Consider escaping weird characters." required></textarea>
    </div>
       <input type="submit" class="btn btn-primary" value="Post">
  </form>
</div>
