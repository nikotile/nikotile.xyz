doctype xml
rss(version='2.0' xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title #{locals.meta.title}
    description Updates from Nikotile.
    language en-us
    link #{getUrl().url}
    atom:link(href=getUrl().url rel='self' type='application/rss+xml')
    for entry in entries
      item
        title #{entry.title}
        guid #{getUrl().protocol}://#{getUrl().hostname}/#{entry.uri} 
        link #{entry.uri} 
        pubDate #{entry.pubDate}
        description <![CDATA[!{entry.description}]]>
